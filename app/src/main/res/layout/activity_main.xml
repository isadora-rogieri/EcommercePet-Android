<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textSobre"
        android:layout_width="330dp"
        android:layout_height="379dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:fontFamily="casual"
        android:text="Somos uma Loja de artigos para pets, como acessórios, brinquedos e muitos outros produtos.          Hoje, com várias lojas espalhadas pelo Brasil, nossa principal         transação é a de afetos, num lugar que proporciona tantos encontros:         de colaboradores, de clientes, de pets. Somos quem abastece a         parte divertida do lar.          Porque uma casa de verdade tem vida, tem amor.          Tem pessoas, tem gente que cuida.          Somos movidos por uma razão de ser. Por algo maior que nos motiva todos         os dias. O que queremos de verdade é inspirar pessoas a se reconectar         com a sua melhor natureza."
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <Button
        android:id="@+id/btProdutos"
        android:layout_width="175dp"
        android:layout_height="90dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="8dp"
        android:text="Conheça Nossos Produtos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textSobre" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="353dp"
        android:layout_height="120dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="68dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logoecommerce" />

</androidx.constraintlayout.widget.ConstraintLayout>